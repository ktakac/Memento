<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/et_new_task_dialog_name"
        android:text="@string/task_name" />

    <EditText
        android:id="@+id/et_new_task_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/et_new_task_dialog_date"
        android:text="@string/date" />

    <EditText
        android:id="@+id/et_new_task_dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="date"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/et_new_task_dialog_time"
        android:text="@string/time" />

    <EditText
        android:id="@+id/et_new_task_dialog_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="time"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/spn_new_task_dialog_category"
        android:text="@string/category" />

    <Spinner
        android:id="@+id/spn_new_task_dialog_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
</LinearLayout>